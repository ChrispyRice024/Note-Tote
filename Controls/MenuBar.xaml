<UserControl x:Class="Note_Tote.Controls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Note_Tote.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem x:Name="NewNote" Header="_New" Click="NewNote_Click"/>
                    <MenuItem Header="_Save" Click="SaveNote_Click"/>
                    <MenuItem x:Name="Exit" Header="_Exit" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="I Cant Help Ya"/>
                </MenuItem>
            </Menu>
        </Grid>
    </Grid>
</UserControl>
