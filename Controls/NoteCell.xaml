<UserControl x:Class="Note_Tote.Controls.NoteCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Note_Tote.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <TextBlock
            x:Name="CellNum"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="12"
            Panel.ZIndex="10"
            Text="10"
            FontSize="15"
            />
        <Button
            x:Name="DeleteBtn"
            Content="🚮"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="12"
            Panel.ZIndex="10"
            FontSize="15"
            Background="Transparent"
            BorderThickness="0"
            Click="DeleteBtn_Click"
            />
        <Border Background="OldLace" BorderThickness="3" CornerRadius="8" BorderBrush="Black" Padding="4" Margin="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
                    x:Name="NoteNameTxt"
                    Grid.Row="0"
                    FontSize="20"
                    TextWrapping="Wrap"
                    TextTrimming="CharacterEllipsis"
                    LineStackingStrategy="BlockLineHeight"
                    LineHeight="16"
                    Height="32"
                    />
                <TextBlock
                    x:Name="NoteDescTxt"
                    Grid.Row="1"
                    FontSize="10"
                    TextWrapping="Wrap"
                    TextTrimming="CharacterEllipsis"
                    LineStackingStrategy="BlockLineHeight"
                    LineHeight="12"
                    Height="36"
                    />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderThickness=".75" BorderBrush="Black" Margin="0" Padding="0" CornerRadius="3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label
                                x:Name="StartDateLabel"
                                VerticalAlignment="Top"
                                FontSize="10"
                                Grid.Row="0"
                                Content="Start Date"
                            />
                            <TextBlock
                                x:Name="StartDateTxt"
                                Grid.Row="1"
                                FontSize="10"
                                Padding="3"
                                Text="01/27/1994"
                            />
                        </Grid>
                        
                    </Border>
                    <Border Grid.Column="1" BorderThickness=".75" BorderBrush="Black" CornerRadius="3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label
                                x:Name="DueDateLabel"
                                VerticalAlignment="Top"
                                FontSize="10"
                                Grid.Row="0"
                                Content="Due Date"
                            />
                            <TextBlock
                                x:Name="DueDateTxt"
                                Grid.Row="1"
                                FontSize="10"
                                Padding="3"
                                Text="01/27/1994"
                            />
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
